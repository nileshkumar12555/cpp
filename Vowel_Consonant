// Write a Program to Check Whether a Character is a Vowel or Consonant

#include<iostream>
using namespace std;

int main()
{
    char ch;
    cout<<"Enter The Charater value"<<endl;
    cin>>ch;
    if(isalpha(ch))
    {
        if(ch=='a' || ch=='e'||ch=='i'||ch=='o'||ch=='u' 
           || ch=='A'||ch=='E'|| ch=='I'|| ch=='O'||ch=='U')
        {
            cout<<"it is vowel"<<endl;

        }
        else{
            cout<<"It is Consonant"<<endl;
        }
    }
}
